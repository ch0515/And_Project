<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/makeback"
    tools:context=".MakePizza">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_cal"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="28dp"
            android:src="@drawable/calendar"/>
        <ImageView
            android:id="@+id/btn_plus"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/plus"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="22dp"/>
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yyyy - mm - dd"
            android:textSize="27dp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="24dp"/>
        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/rightarrow"
            android:layout_marginLeft="19dp"/>
    </LinearLayout>

    <FrameLayout
        android:layout_marginTop="73dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/list1"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/item1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:background="?android:attr/listChoiceIndicatorMultiple"/>
                <EditText
                    android:id="@+id/item_edt1"
                    android:inputType="text"
                    android:layout_width="160dp"
                    android:layout_height="44dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/list2"
                android:visibility="invisible"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/item2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:background="?android:attr/listChoiceIndicatorMultiple"/>
                <EditText
                    android:id="@+id/item_edt2"
                    android:inputType="text"
                    android:layout_width="160dp"
                    android:layout_height="44dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/list3"
                android:visibility="invisible"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/item3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:background="?android:attr/listChoiceIndicatorMultiple"/>
                <EditText
                    android:id="@+id/item_edt3"
                    android:inputType="text"
                    android:layout_width="160dp"
                    android:layout_height="44dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/list4"
                android:visibility="invisible"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/item4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:background="?android:attr/listChoiceIndicatorMultiple"/>
                <EditText
                    android:id="@+id/item_edt4"
                    android:inputType="text"
                    android:layout_width="160dp"
                    android:layout_height="44dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/list5"
                android:visibility="invisible"
                android:layout_marginTop="240dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/item5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:background="?android:attr/listChoiceIndicatorMultiple"/>
                <EditText
                    android:id="@+id/item_edt5"
                    android:inputType="text"
                    android:layout_width="160dp"
                    android:layout_height="44dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/list6"
                android:visibility="invisible"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/item6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:background="?android:attr/listChoiceIndicatorMultiple"/>
                <EditText
                    android:id="@+id/item_edt6"
                    android:inputType="text"
                    android:layout_width="160dp"
                    android:layout_height="44dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/list7"
                android:visibility="invisible"
                android:layout_marginTop="360dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/item7"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:background="?android:attr/listChoiceIndicatorMultiple"/>
                <EditText
                    android:id="@+id/item_edt7"
                    android:inputType="text"
                    android:layout_width="160dp"
                    android:layout_height="44dp"/>
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="170dp"
                android:layout_marginTop="280dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:src="@drawable/oni"
                android:id="@+id/oni"/>
            <ImageView
                android:layout_marginLeft="170dp"
                android:layout_marginTop="220dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:src="@drawable/mus"
                android:id="@+id/mus"/>
            <ImageView
                android:layout_marginLeft="170dp"
                android:layout_marginTop="240dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:src="@drawable/tom"
                android:id="@+id/tom"/>
            <ImageView
                android:layout_marginLeft="170dp"
                android:layout_marginTop="240dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:src="@drawable/pi"
                android:id="@+id/pi"/>
            <ImageView
                android:layout_marginLeft="170dp"
                android:layout_marginTop="260dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:src="@drawable/ham"
                android:id="@+id/ham"/>
            <ImageView
                android:layout_marginLeft="170dp"
                android:layout_marginTop="250dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:src="@drawable/oli"
                android:id="@+id/oli"/>
            <ImageView
                android:layout_marginLeft="170dp"
                android:layout_marginTop="230dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:src="@drawable/pa"
                android:id="@+id/pa"/>
        </FrameLayout>

    </FrameLayout>

</LinearLayout>